package ex001;

public class ex4_5_3 {
	public static void main(String[] args){
		
		int i = 1;
		while(i<=20){
			i++;
			double sum = 0;
			sum = sum + 1/factorial(i);
		}
		
		public static double factorial(int i){
			double temp = 1;
			for(int j = 0;j <= i; j++){
				temp = temp*j;
			}
			return temp;
		}
	}
}
